# MCServerNap Docker Configuration
# Copy this file to .env and modify as needed

# =============================================================================
# RCON Settings (must match between nap and minecraft services)
# =============================================================================
RCON_PASSWORD=your-secure-password-here

# =============================================================================
# Idle Detection
# =============================================================================
# Stop server after this many seconds with no players (default: 600 = 10 min)
IDLE_TIMEOUT=600
# How often to check player count via RCON (default: 60 = 1 min)
POLL_INTERVAL=60

# =============================================================================
# Server Browser Display (when server is sleeping)
# =============================================================================
MOTD_TEXT=Napping... Join to start server
MOTD_COLOR=aqua
MOTD_BOLD=true

# =============================================================================
# Connection Message (shown when player tries to join sleeping server)
# =============================================================================
CONNECTION_MSG_TEXT=Server is starting up. Please wait and try again...
CONNECTION_MSG_COLOR=light_purple
CONNECTION_MSG_BOLD=true

# =============================================================================
# Minecraft Server Settings
# =============================================================================
MC_TYPE=VANILLA
# Options: VANILLA, PAPER, SPIGOT, BUKKIT, FORGE, FABRIC, etc.

MC_VERSION=LATEST
# Options: LATEST, 1.20.4, 1.19.2, etc.

MC_MEMORY=2G
# Java heap size

VIEW_DISTANCE=10
MAX_PLAYERS=20
SERVER_MOTD=A Minecraft Server
DIFFICULTY=normal
GAMEMODE=survival
PVP=true
ONLINE_MODE=true

